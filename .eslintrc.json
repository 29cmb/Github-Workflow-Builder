{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off", // Allow console statements
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // Warn for unused variables, ignore variables starting with _
    "prefer-const": "error" // Prefer const over let where possible
  }
}